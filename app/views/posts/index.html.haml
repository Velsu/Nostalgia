- if user_signed_in?
	%p#intro
		Welcome
		= current_user.name
		%br/
		%span
			Share Your Nostalgia with us!
-else
	%p#intro
		Feeling Nostalgic?
		%br
		%span
			Do You have a video game from the past that made big impact on You? Sign up now and share it with us!
			%br
			%span
				= link_to "Sign Up", new_user_registration_path, class: "main-button"


#posts
	- @posts.each do |post|
		.post
			.post_image= link_to image_tag(post.image.url(:small)), post
			.post_content
				.title
					%h2= link_to post.title, post
				.data.clearfix
					%p.username
						Shared by
						= post.user.name
					%p.buttons
						%span
							%i.fa.fa-comments-o
							= pluralize(post.comments.size, "Comment")
						%span
							%i.fa.fa-thumbs-o-up
							= pluralize(post.get_upvotes.size, "Like")
